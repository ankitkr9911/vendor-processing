# ========================================
# Environment Configuration Template
# Copy this file to .env and fill in your actual credentials
# ========================================

# ========================================
# MongoDB Configuration (REQUIRED)
# ========================================
MONGO_URI=mongodb+srv://username:password@cluster0.mongodb.net/invoice_processing?retryWrites=true&w=majority

# ========================================
# OpenAI Configuration (REQUIRED)
# ========================================
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# ========================================
# Nylas Email API Configuration (REQUIRED)
# ========================================
NYLAS_API_KEY=nyk_v0_your-nylas-api-key
NYLAS_CLIENT_ID=your-client-id
NYLAS_GRANT_ID=your-grant-id
NYLAS_CLIENT_SECRET=nyk_v0_your-client-secret
NYLAS_REDIRECT_URI=http://your-server-ip:8001/api/v1/admin/nylas/callback
NYLAS_WEBHOOK_SECRET=your-webhook-secret
NYLAS_API_URI=https://api.us.nylas.com

# ========================================
# JWT Configuration (REQUIRED)
# ========================================
JWT_SECRET_KEY=your-secure-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256

# ========================================
# Admin Portal Credentials (REQUIRED)
# ========================================
ADMIN_EMAIL=admin@vendorportal.com
ADMIN_PASSWORD=admin123

# ========================================
# Queue Configuration (Optional - defaults provided)
# ========================================
BATCH_SIZE=10
STAGE3_SCHEDULE_INTERVAL=*/5 * * * * *
ENABLE_STAGE3_SCHEDULER=true
MIN_VENDORS_FOR_TRIGGER=1
WORKER_CONCURRENCY=50

# ========================================
# Service URLs (Auto-configured in Docker)
# Leave empty for Docker deployment
# ========================================
# PYTHON_API_URL=http://backend:8001
# QUEUE_SERVICE_URL=http://queue_service:3000
